class animal
{
    public int legcount;
  protected void display ()
  {
    System.out.println ("i am an animal");
    System.out.println("ihave"+legcount+"legs");
  }
}
public class main{
     public static void main (String[]args){
         animal a=new animal();
         a.legcount=4;
         a.display ();
     }
    
}

